{
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "start": "turbo run start",
    "lint": "turbo run lint --",
    "lint:fix": "turbo run lint:fix --",
    "migrate": "turbo run migrate",
    "rollback": "turbo run rollback",
    "format:check:staged": "lint-staged",
    "deploy:local:auth": "docker-compose  -f docker/docker-compose.auth.yml up --build -d",
    "down:local:auth": "docker-compose  -f docker/docker-compose.auth.yml down",
    "docker:build:auth": "docker build -t auth -f services/auth/Dockerfile --no-cache .",
    "clean": "turbo run clean && rm -rf node_modules",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@turbo/gen": "^1.9.7",
    "eslint": "^7.32.0",
    "eslint-config-custom": "workspace:*",
    "tsconfig": "workspace:*",
    "lint-staged": "^13.2.3",
    "prettier": "^2.5.1",
    "turbo": "latest",
    "husky": "^8.0.0"
  },
  "packageManager": "pnpm@7.15.0",
  "name": "services"
}
